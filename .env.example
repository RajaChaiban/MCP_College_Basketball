# College Basketball MCP Server Configuration
# Copy to .env and fill in values as needed

# Server transport: "stdio" or "streamable-http"
CBB_TRANSPORT=stdio

# HTTP transport settings (only used with streamable-http)
CBB_HOST=127.0.0.1
CBB_PORT=8000
CBB_SERVER_API_KEY=

# Cache settings
CBB_CACHE_DIR=.cache
CBB_CACHE_ENABLED=true

# Rate limiting (requests per second per source)
CBB_ESPN_RATE_LIMIT=10
CBB_NCAA_RATE_LIMIT=5

# Logging
CBB_LOG_LEVEL=INFO

# Future paid sources (leave empty to skip)
CBB_SPORTSDATAIO_KEY=
CBB_KENPOM_USER=
CBB_KENPOM_PASS=
